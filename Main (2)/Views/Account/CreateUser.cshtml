@model VisitorManagement.DataAccess.Models.User

@{
    ViewData["Title"] = "CreateUser";
}
<style>
    #show_password {
        background-color:#73879C;height:38px;width:30px;color:white;padding:7px 9px 0px 9px;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
<script type="text/javascript">

        $(document).ready(function () {
            $('#show_password').hover(function show() {
                //Change the attribute to text
                $('#password').attr('type', 'text');
                $('.icon').removeClass('fa fa-eye-slash').addClass('fa fa-eye');
            },
            function () {
                //Change the attribute back to password
                $('#password').attr('type', 'password');
                $('.icon').removeClass('fa fa-eye').addClass('fa fa-eye-slash');
            });          
        });
</script>

<div class="right_col" role="main">
    <div class="">
        <div class="page-title">

        </div>
        <div class="clearfix"></div>
        <div class="row">
            <div class="col-md-12 col-sm-12 ">
                <div class="x_panel">
                    <div class="x_title">
                        <h2> <i class="fa fa-user-plus fa-1x"></i> Create User</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li>
                                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
                            </li>
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><i class="fa fa-wrench"></i></a>
                                <ul class="dropdown-menu" role="menu">
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 1</a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="#">Settings 2</a>
                                    </li>
                                </ul>
                            </li>
                            <li>
                                <a class="close-link"><i class="fa fa-close"></i></a>
                            </li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        <br />
                        <form asp-action="CreateUser" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="UserLogin">
                                    User Login : <span class="required"></span>
                                </label>
                                <div class="col-md-6 col-sm-6">
                                    <input type="email" asp-for="UserLogin" name="UserLogin" required="required" class="form-control ">
                                </div>
                                @if (ViewBag.UserLogin != null)
                                {
                                    <span class="text-danger">* @ViewBag.UserLogin</span>
                                }

                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="FirstName">
                                    First Name : <span class="required"></span>
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" asp-for="FirstName" id="first-name" required="required" class="form-control ">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="LastName">
                                    Last Name : <span class="required"></span>
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="text" asp-for="LastName" required="required" class="form-control ">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" style="height:40px;" asp-for="EmailAddress">
                                    Email Address : <span class="required"></span>
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input type="email" asp-for="EmailAddress" name="EmailAddress" required="required" class="form-control ">
                                </div>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" asp-for="Password">
                                    Password : <span class="required"></span>
                                </label>
                                <div class="col-md-6 col-sm-6 input-group">
                                    <input type="password" asp-for="Password" id="password" required="required" class="form-control ">
                                    <div class="input-group-append">
                                        <a id="show_password">
                                            <span class="fa fa-eye-slash icon"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                            <div class="row" style="margin-left:28%">
                                <div class="item form-group">
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="IsAdmin" class="flat" checked="checked" /> @Html.DisplayNameFor(model => model.IsAdmin)
                                        </label>
                                    </div>
                                </div>
                                <div class="item form-group" style="margin-left:25%">
                                    <div class="checkbox">
                                        <label>
                                            <input asp-for="IsInactive" class="flat" /> @Html.DisplayNameFor(model => model.IsInactive)
                                        </label>
                                    </div>
                                </div>
                            </div>

                            <div class="ln_solid"></div>
                            <div class="item form-group">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <button class="btn btn-primary" type="button">Cancel</button>
                                    <button class="btn btn-primary" type="reset">Reset</button>
                                    <button type="submit" class="btn btn-success">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
